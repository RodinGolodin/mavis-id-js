{
  "compilerOptions": {
    "rootDir": "src",

    "moduleResolution": "Bundler",

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "inlineSources": false,
    "preserveWatchOutput": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/types",

    "jsx": "react",
    "module": "ES2015",
    "target": "ES2015",
    "esModuleInterop": true,
    "lib": ["dom", "esnext", "ES2019.Object"],

    // to import wasm-exec.js
    "allowJs": true,
    "outDir": "dist/ts-build"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
